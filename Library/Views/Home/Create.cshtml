@model Library.ViewModels.BooksViewModel
@{
    ViewBag.Title = "Добавление книги";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Выберите автора</label>
        <select asp-for="AuthorId"
                class="form-control"
                asp-items="@(new SelectList(Model.Authors,"author_id", "last_name"))">
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>