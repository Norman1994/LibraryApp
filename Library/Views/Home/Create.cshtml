@model Library.ViewModels.BooksViewModel
@{
    ViewBag.Title = "Добавление книги";
}
    <form asp-action="create" asp-controller="home">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AuthorId">Выберите автора</label>
            <select asp-for="AuthorId"
                    class="form-control"
                    asp-items="@(new SelectList(Model.Authors,"AuthorId", "LastName"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Описание</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </form>