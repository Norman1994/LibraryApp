@model Library.ViewModels.BooksViewModel

@{
    ViewBag.Title = "Редактирование информации о произведении";
}


<form asp-action="Edit" asp-controller="Home" asp-anti-forgery="true">
    <div>
        <div>
            <label asp-for="Name">Введите название книги</label><br />
            <input type="text" asp-for="Name" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="AuthorId">Выберите автора</label>
            <select asp-for="AuthorId"
                    class="form-control"
                    asp-items="@(new SelectList(Model.Authors,"author_id", "last_name"))">
            </select>
        </div>
        <div>
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>
</form>