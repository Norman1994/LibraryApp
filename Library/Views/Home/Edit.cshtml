@model Library.Models.Books
@{
    ViewBag.Title = "Редактирование информации о произведении";
}


<form asp-action="edit" asp-controller="home" asp-route-id="id">
    <div class="form-group">
        <label asp-for="name" class="control-label">Название</label>
        <input type="text" asp-for="name" class="form-control" />
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.author_id)
        @Html.DropDownList("bookname", new SelectList(ViewBag.data, "author_id", "last_name"))
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
